{
  "watch": [
    "index.js",
    "src",
    "routes",
    "controllers",
    "middlewares",
    "config"
  ],
  "ext": "js,json,env",
  "ignore": [
    "node_modules",
    "logs",
    "tmp",
    "coverage",
    "Dockerfile",
    "docker-compose.yml",
    "yarn.lock"
  ],
  "delay": "100",
  "env": {
    "NODE_ENV": "development",
    "PORT": "5000"
  },
  "legacyWatch": true,
  "verbose": true,
  "inspect": true
}
